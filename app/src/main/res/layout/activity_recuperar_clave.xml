<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".recuperar_clave">


    <Button
        android:id="@+id/regresar"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/boton_azul"
        android:text="REGRESAR"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celular_registrado"
        app:layout_constraintVertical_bias="0.271"
        app:rippleColor="@color/material_dynamic_primary60"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/continuar"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/boton_azul"
        android:text="CONTINUAR"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celular_registrado"
        app:layout_constraintVertical_bias="0.271"
        app:rippleColor="@color/material_dynamic_primary60"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="209dp"
        android:layout_height="232dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_vecindapp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recuperacion_clave"
        android:layout_width="362dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:text="Para recuperar tu clave, ingresa los siguientes datos"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/celular_registrado"
        android:layout_width="329dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@color/fondo_datos"
        android:ems="10"
        android:hint=" Celular Registrado"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo_registrado" />

    <EditText
        android:id="@+id/correo_registrado"
        android:layout_width="329dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@color/fondo_datos"
        android:ems="10"
        android:hint=" Correo Electrónico Registrado"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero_documento" />

    <EditText
        android:id="@+id/numero_documento"
        android:layout_width="329dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@color/fondo_datos"
        android:ems="10"
        android:hint=" Número de Cédula"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:cornerRadius="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recuperacion_clave" />

</androidx.constraintlayout.widget.ConstraintLayout>