<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/gestion_PQR"
        android:layout_width="283dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#652E355A"
        android:text="Gestión de PQRs"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/logo_PQR"
        app:layout_constraintTop_toBottomOf="@+id/gestion_pagos" />

    <Button
        android:id="@+id/cerrar_sesion"
        android:layout_width="164dp"
        android:layout_height="42dp"
        android:backgroundTint="#EB1C1E2B"
        android:text="Cerrar Sesión"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gestion_PQR"
        app:layout_constraintVertical_bias="0.216" />

    <Button
        android:id="@+id/gestion_pagos"
        android:layout_width="283dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#652E355A"
        android:text="Gestión de Pagos"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/logo_pagos"
        app:layout_constraintTop_toBottomOf="@+id/gestion_usuarios" />

    <Button
        android:id="@+id/gestion_usuarios"
        android:layout_width="283dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#652E355A"
        android:text="Gestión de Usuarios"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/logo_usuarios"
        app:layout_constraintTop_toBottomOf="@+id/gestion_boletines" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="159dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_vecindapp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo_boletin"
        android:layout_width="65dp"
        android:layout_height="69dp"
        android:layout_marginTop="276dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boletin_informativo" />

    <TextView
        android:id="@+id/titulo_perfil_administrador"
        android:layout_width="249dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:text="PERFIL DE ADMINISTRADOR"
        android:textAppearance="@color/black"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ImageView
        android:id="@+id/logo_usuarios"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_boletin"
        app:srcCompat="@drawable/gestion_usuario" />

    <Button
        android:id="@+id/gestion_boletines"
        android:layout_width="283dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#652E355A"
        android:text="Gestión de Boletines"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toEndOf="@+id/logo_boletin"
        app:layout_constraintTop_toBottomOf="@+id/titulo_perfil_administrador" />

    <ImageView
        android:id="@+id/logo_pagos"
        android:layout_width="66dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_usuarios"
        app:srcCompat="@drawable/logo_pagos" />

    <ImageView
        android:id="@+id/logo_PQR"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_pagos"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_pqr" />

</androidx.constraintlayout.widget.ConstraintLayout>